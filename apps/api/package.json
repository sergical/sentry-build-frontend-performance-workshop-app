{
  "name": "api",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Node.js server for Unborked application",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node -r dotenv/config' src/index.ts",
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "db:new": "npx neondb -y",
    "db:generate": "drizzle-kit generate",
    "studio": "drizzle-kit studio",
    "db:seed": "ts-node src/db/seed.ts",
    "db:migrate": "ts-node src/db/migrate.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^10.21.0",
    "@types/bcrypt": "^5.0.2",
    "@types/pg": "^8.11.11",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.41.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.14.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.24.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
